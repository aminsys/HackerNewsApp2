<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackerNewsApp2.MainPage"
             Shell.BackgroundColor="Orange"
             Title="Appified Hacker News">
    <VerticalStackLayout BackgroundColor="AntiqueWhite" Margin="10">
        <Label Text="Welcome to the Appified version of Hacker News, This app displays the five most recent posts from Ask HN."
          HorizontalOptions="Center" FontSize="18" TextColor="Black" Margin="10"/>
        <ActivityIndicator x:Name="loadingIndicator" Color="Orange" IsRunning="True" IsVisible="True" 
           HorizontalOptions="Center" VerticalOptions="End"/>
    </VerticalStackLayout>

</ContentPage>
